			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>mimmi</id>
			<name>Mimmi Sundin</name>
			<email>mimmi.sundin@ub.uu.se</email>
			<organization>Library systems unit, Uppsala University Library</organization>
			<organizationUrl>http://epc.ub.uu.se</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
